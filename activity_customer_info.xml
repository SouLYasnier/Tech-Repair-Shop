<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="563dp"
        android:backgroundTint="#90CAF9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Name:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="13"
            android:hint="Enter Your Phone:"
            android:inputType="phone"
            android:singleLine="false" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Email:"
            android:inputType="textEmailAddress" />

        <CheckBox
            android:id="@+id/warrentyCheck"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Is your device still under warrenty?" />

        <RadioGroup
            android:id="@+id/deviceRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="144dp">

            <TextView
                android:id="@+id/deviceRadioLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Device OS Type:" />

            <RadioButton
                android:id="@+id/androidRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android OS" />

            <RadioButton
                android:id="@+id/macRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mac/IOS" />

            <RadioButton
                android:id="@+id/linuxRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linux" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Enter any extra information below that would be helpful for the repair:"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:singleLine="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="32dp"
        android:text="Device Type:"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="32dp"
        android:text="Place Holder"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>